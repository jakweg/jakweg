{
	"name": "portfolio",
	"version": "1.0.0",
	"private": true,
	"scripts": {
		"dev": "npm-run-all --parallel images vite typesafe-i18n",
		"dev:host": "npm-run-all --parallel images vite:host typesafe-i18n",
		"vite": "vite",
		"vite:host": "vite --host",
		"typesafe-i18n": "typesafe-i18n",
		"build": "npm run images && npm run typesafe-i18n -- --no-watch && vite build && workbox generateSW workbox-config.json",
		"preview": "vite preview --host",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"lint": "prettier --plugin-search-dir . --check . && eslint .",
		"format": "prettier --plugin-search-dir . --write .",
		"images": "node resize-images.js"
	},
	"type": "module",
	"devDependencies": {
		"@sveltejs/adapter-static": "^3.0.1",
		"@sveltejs/kit": "^2.0.6",
		"@sveltejs/vite-plugin-svelte": "^3.0.1",
		"@typescript-eslint/eslint-plugin": "^6.17.0",
		"@typescript-eslint/parser": "^6.17.0",
		"eslint": "^8.56.0",
		"eslint-config-prettier": "^9.1.0",
		"npm-run-all": "^4.1.5",
		"prettier": "^3.1.1",
		"prettier-plugin-svelte": "^3.1.2",
		"svelte": "^4.2.8",
		"svelte-check": "^3.4.3",
		"tslib": "^2.6.2",
		"typesafe-i18n": "^5.26.2",
		"typescript": "^5.3.3",
		"vite": "^5.0.0",
		"workbox-cli": "^7.0.0"
	}
}
